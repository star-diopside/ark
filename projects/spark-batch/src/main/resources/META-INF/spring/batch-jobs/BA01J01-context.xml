<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd">

    <import resource="classpath:/META-INF/spring/batch/simple-step-context.xml" />

    <job id="BA01J01" incrementer="jobParametersIncrementer" xmlns="http://www.springframework.org/schema/batch">
        <listeners>
            <listener ref="BA01J01.listener.temporaryFile" />
        </listeners>
        <step id="BA01J01S01" parent="simpleStep" next="BA01J01S02">
            <tasklet transaction-manager="transactionManager">
                <chunk reader="BA01J01S01.reader" processor="BA01J01S01.processor" writer="BA01J01S01.writer" />
            </tasklet>
        </step>
        <step id="BA01J01S02" parent="simpleStep">
            <tasklet transaction-manager="transactionManager">
                <chunk reader="BA01J01S02.reader" processor="BA01J01S02.processor" writer="BA01J01S02.writer" />
            </tasklet>
        </step>
    </job>

    <bean id="BA01J01.listener.temporaryFile" class="jp.gr.java_conf.star_diopside.spark.commons.batch.support.TemporaryFileJobListener">
        <property name="key" value="tempFile" />
    </bean>

    <bean id="BA01J01S01.reader" class="org.springframework.batch.item.database.JpaPagingItemReader" scope="step">
        <property name="entityManagerFactory" ref="entityManagerFactory" />
        <property name="queryString" value="select u from User u order by u.userId asc" />
    </bean>

    <bean id="BA01J01S01.processor" class="jp.gr.java_conf.star_diopside.spark.batch.logic.BA01J01S01Processor" />

    <bean id="BA01J01S01.writer" class="org.springframework.batch.item.file.FlatFileItemWriter" scope="step">
        <property name="resource" value="file:#{jobExecutionContext['tempFile']}" />
        <property name="encoding" value="UTF-8" />
        <property name="lineAggregator">
            <bean class="org.springframework.batch.item.file.transform.DelimitedLineAggregator">
                <property name="fieldExtractor">
                    <bean class="org.springframework.batch.item.file.transform.BeanWrapperFieldExtractor">
                        <property name="names" value="userId,version" />
                    </bean>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="BA01J01S02.reader" class="org.springframework.batch.item.file.FlatFileItemReader" scope="step">
        <property name="resource" value="file:#{jobExecutionContext['tempFile']}" />
        <property name="encoding" value="UTF-8" />
        <property name="lineMapper">
            <bean class="org.springframework.batch.item.file.mapping.DefaultLineMapper">
                <property name="lineTokenizer">
                    <bean class="org.springframework.batch.item.file.transform.DelimitedLineTokenizer">
                        <property name="names" value="userId,version" />
                    </bean>
                </property>
                <property name="fieldSetMapper">
                    <bean class="jp.gr.java_conf.star_diopside.spark.batch.logic.BA01J01S02Mapper" />
                </property>
            </bean>
        </property>
    </bean>

    <bean id="BA01J01S02.processor" class="jp.gr.java_conf.star_diopside.spark.batch.logic.BA01J01S02Processor" />

    <bean id="BA01J01S02.writer" class="jp.gr.java_conf.star_diopside.spark.batch.logic.BA01J01S02Writer" />

</beans>
